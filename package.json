{
	"name": "lb-upload-standalone",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "bun --hot src/server.ts",
		"start": "bun src/server.ts",
		"build": "bun build src/server.ts --target=bun --outfile=dist/index.js",
		"build:linux-x64": "bun build --compile --target=bun-linux-x64 src/server.ts --outfile dist/lb-upload-standalone-linux",
		"build:linux-x64-baseline": "bun build --compile --target=bun-linux-x64-baseline src/server.ts --outfile dist/lb-upload-standalone-linux-baseline",
		"build:linux-arm64": "bun build --compile --target=bun-linux-arm64 src/server.ts --outfile dist/lb-upload-standalone-linux-arm64",
		"check": "bun --bun tsc --noEmit",
		"docker:build": "docker build -t lb-upload-standalone .",
		"docker:run": "docker run -p 30121:30121 -v ./uploads:/app/uploads lb-upload-standalone",
		"docker:up": "docker-compose up -d",
		"docker:down": "docker-compose down",
		"docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
		"docker:dev-down": "docker-compose -f docker-compose.dev.yml down",
		"docker:prod": "docker-compose up -d",
		"docker:prod-down": "docker-compose down"
	},
	"keywords": ["file-upload", "bun", "hono", "docker", "api", "server", "FiveM"],
	"author": "noflm",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/noflm/lb-upload-standalon.git"
	},
	"bugs": {
		"url": "https://github.com/noflm/lb-upload-standalon/issues"
	},
	"homepage": "https://github.com/noflm/lb-upload-standalon#readme",
	"dependencies": {
		"file-type": "^21.0.0",
		"hono": "^4.9.12",
		"uuid": "^9.0.1"
	},
	"devDependencies": {
		"@types/bun": "^1.3.0",
		"@types/uuid": "^9.0.8",
		"typescript": "^5.9.3"
	},
	"prettier": {
		"tabWidth": 4,
		"singleQuote": true,
		"printWidth": 140,
		"semi": false,
		"quoteProps": "preserve",
		"trailingComma": "none"
	}
}
